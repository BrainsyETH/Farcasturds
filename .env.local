# Address of your deployed Farcasturds contract on Base
NEXT_PUBLIC_FARCASTURDS_ADDRESS=0xYOUR_CONTRACT_ADDRESS_HERE

# Base RPC URL (public)
BASE_RPC_URL=https://mainnet.base.org

# Backend minter private key (the wallet you set / will set as `minter` in the contract)
FARCASTURDS_MINTER_PRIVATE_KEY=0xYOUR_MINTER_WALLET_PRIVATE_KEY_HERE

# Mock mode: when true, /api/mint won't hit Base, just pretend mint succeeded
MOCK_MINT=true

# OpenAI
OPENAI_API_KEY=sk-...

# Farcaster (Neynar)
NEYNAR_API_KEY=...

# App host (for metadata external_url)
APP_BASE_URL=https://farcasturd.app

# Optional: if you upload images to a bucket
IMAGE_STORAGE_BUCKET_URL=https://your-cdn-or-bucket-base-url
IMAGE_STORAGE_API_KEY=your-storage-key   # if needed
